#!/usr/bin/env bash
declare -gA TOKENS=()

declare -g TOKENS["DECIMAL_DIGIT"]='[0-9]'
declare -g TOKENS["OCTAL_DIGIT"]='[0-7]'
declare -g TOKENS["HEXADECIMAL_DIGIT"]='[0-9a-fA-F]'
declare -g TOKENS["SINGLE_LETTER"]='[A-Za-z_$]'
declare -g TOKENS["INT_SINGLE_LETTER"]='[A-Za-z_$\200-\377]'
declare -g TOKENS["SHELL_WORD"]="[^ \t;\n'\"]"
declare -g TOKENS["OPTIONAL_EXPONENT"]="[eE][+-]?$DECIMAL_DIGIT+"
declare -g TOKENS["WHITESPACE"]='[\t]+'
declare -g TOKENS["SIMPLE_ESCAPE"]="([A-Za-z'\"?#*\\])"
declare -g TOKENS["OCTAL_ESCAPE"]="($OCTAL_DIGIT{1,3})"
declare -g TOKENS["HEX_ESCAPE"]="([xX]$HEXADECIMAL_DIGIT{1,8})"
declare -g TOKENS["STRING_LITERAL"]="([^\"\\\n]|([\\]($SIMPLE_ESCAPE|$OCTAL_ESCAPE|$HEX_ESCAPE)))"
declare -g TOKENS["ENV_VAR_IDENTIFIER"]="[^ \t\n;='\"&\\|]"
declare -g TOKENS["UNIV_CHAR_NAME"]="\\u$HEXADECIMAL_DIGIT{4}|\\U$HEXADECIMAL_DIGIT{8}"

declare -g TOKENS["AMPERSAND"]='&'
declare -g TOKENS["ANDAND"]='&&'
declare -g TOKENS["ANDassign"]='&='
declare -g TOKENS["ARROW"]='->'
declare -g TOKENS["ASSIGNOP"]='='
declare -g TOKENS["BRACKETS"]='[]'
declare -g TOKENS["DECR"]='--'
declare -g TOKENS["DIVassign"]='/='
declare -g TOKENS["EQ"]='=='
declare -g TOKENS["ERassign"]='^='
declare -g TOKENS["FLOATINGconstant"]="($DECIMAL_DIGIT*.$DECIMAL_DIGIT*)|($DECIMAL_DIGIT*.$DECIMAL_DIGIT*$WHITESPACE?$OPTIONAL_EXPONENT)|($DECIMAL_DIGIT+$WHITESPACE?$OPTIONAL_EXPONENT)"
declare -g TOKENS["HAT"]='^'
declare -g TOKENS["IDENTIFIER"]="($SINGLE_LETTER|$UNIV_CHAR_NAME)($SINGLE_LETTER|$UNIV_CHAR_NAME|$DECIMAL_DIGIT)*"
declare -g TOKENS["TYPEDEFname"]="$IDENTIFIER"
declare -g TOKENS["INCR"]='++'
declare -g TOKENS["INTEGERconstant"]="(0$OCTAL_DIGIT+)|(0[xX]$HEXADECIMAL_DIGIT+)|(DECIMAL_DIGIT+)"
declare -g TOKENS["LBRACKET"]='['
declare -g TOKENS["LS"]='<<'
declare -g TOKENS["LSassign"]='<<='
declare -g TOKENS["MINUS"]='-'
declare -g TOKENS["MINUSassign"]='-='
declare -g TOKENS["MOD"]='%'
declare -g TOKENS["MODassign"]='%='
declare -g TOKENS["MULTassign"]='*='
declare -g TOKENS["NE"]='!='
declare -g TOKENS["NOT"]='!'
declare -g TOKENS["OR"]='|'
declare -g TOKENS["ORassign"]='|='
declare -g TOKENS["OROR"]='||'
declare -g TOKENS["PLUS"]='+'
declare -g TOKENS["PLUSassign"]='+='
declare -g TOKENS["QUESTION"]='?'
declare -g TOKENS["RBRACKET"]=']'
declare -g TOKENS["RS"]='>>'
declare -g TOKENS["RSassign"]='>>='
declare -g TOKENS["TWIDDLE"]='~'

declare -g TOKENS["CHAR"]='char'
declare -g TOKENS["CONST"]='const'
declare -g TOKENS["DOUBLE"]='double'
declare -g TOKENS["ENUM"]='enum'
declare -g TOKENS["FLOAT"]='float'
declare -g TOKENS["INT"]='int'
declare -g TOKENS["LONG"]='long'
declare -g TOKENS["SHORT"]='short'
declare -g TOKENS["SIGNED"]='signed'
declare -g TOKENS["SIZEOF"]='sizeof'
declare -g TOKENS["STRUCT"]='struct'
declare -g TOKENS["UNION"]='union'
declare -g TOKENS["UNSIGNED"]='unsigned'
declare -g TOKENS["VOID"]='void'
declare -g TOKENS["VOLATILE"]='volatile'
